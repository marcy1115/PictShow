<%= form_with method: :post,local: true do |form| %>
<div>
  <div>
    <h1>会員登録をして、イラストを投稿しよう！</h1>
  </div>

  <%# 登録フォーム%>
  <div>
    <div>
      <label>ニックネーム</label>
      <span>※必須項目</span>
    </div>
    <%= form.text_field :nickname, placeholder: 'ユーザーネームを記入。上限20文字', maxlength: '40' %>
  </div>
  </div>
    <div>
      <label>メールアドレス</label>
      <span>※必須項目</span>
    </div>
    <%= form.text_field :email, placeholder: '連絡先emailアドレスを記入。', size: '40' %>
  </div>
  <div>
    <div>
      <label>パスワード</label>
      <span>※必須項目</span>
    </div>
    <%= form.text_field :password, placeholder: '半角英数字混合のみ、使用可', size: '40' %>
  </div>
  <div>
    <div>
      <label>性別</label>
      <span>※必須項目</span>
      <p>
        <%= form.radio_button :sexuality, '男'%>男
        <%= form.radio_button :sexuality, '女'%>女
        <%= form.radio_button :sexuality, 'その他'%>その他
        </p>
    </div>
    <div>
      <div>
        <label>生年月日</label>
        <span>※必須項目</span>
      </div>
      <%= raw sprintf(
                  form.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <div>
      <%= form.submit '会員登録' %>
    </div>
  </div>
</div>
<% end %>
  <%# 登録フォーム%>
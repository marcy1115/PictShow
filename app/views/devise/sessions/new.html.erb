<%= render 'shared/header' %>
  <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |form| %>
  <div class='form-wrap'>

    <div class='form-header'>
      <h1 class='form-header-text'>
        投稿するには、ログインしてください！
      <h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>メールアドレス</label>
        <span class='indispensable'>※必須項目</span>
      </div>
      <%= form.text_field :email, class: 'input-default', id: 'email', placeholder: '連絡先emailアドレスを入力。', size: '40' %>
    </div>
    <div class='form-group'>
      <div class='form-text-wrap'>
        <label class='form-text'>パスワード</label>
        <span class='indispensable'>※必須項目</span>
      </div>
      <%= form.password_field :password, class: 'input-default', id: 'password', placeholder: '半角英数字混合のみ、使用可', size: '40' %>
    </div>
    <div class='form-group'>
      <div class='login-btn'>
        <%= form.submit 'ログイン', class: 'login-red-btn' %>
      </div>
    </div>
  </div>
  <% end %>
<%= render 'shared/footer' %>
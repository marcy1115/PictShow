<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag('pict_logo.jpg', class: 'pict-show-icon'), '/' %>
    <ul class='user-wrap'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, '#' %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, method: :get, class: 'log-in' %></li>
        <li><%= link_to '新規登録', new_user_registration_path, method: :get, class: 'sign-up' %></li>
      <% end %>
    </ul>
  </div>
</header>